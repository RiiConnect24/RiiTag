doctype html
head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    title RiiTag
    link(rel='stylesheet' href='/assets/bootstrap/css/bootstrap.min.css')
    link(rel='stylesheet' href='/assets/css/all.css')
    link(rel='stylesheet' href='/assets/css/styles.css')
body
    nav.navbar.navbar-light.navbar-expand-md.bg-dark
        .container-fluid
            a.navbar-brand.text-light(href='/')
                img(src="/logo.svg" height="48" style="margin-top: -4px" alt="RiiTag Logo")
            button.navbar-toggler(data-toggle='collapse' data-target='#navcol-1')
                span.sr-only Toggle navigation
                span.navbar-toggler-icon
            #navcol-1.collapse.navbar-collapse
                ul.nav.navbar-nav.mr-auto
                    li.nav-item(role='presentation')
                        a.nav-link.text-white-50(href='/') Home
                ul.nav.navbar-nav
                    if !user
                        li.nav-item(role='presentation')
                            a.nav-link.text-white-50(href='/login') Login
                    else
                        li.nav-item(role='presentation')
                            a.nav-link.text-white-50(href=`/${user.id}`)
                                h6.mb-0
                                    img(src=`https://cdn.discordapp.com/avatars/${user.id}/${user.avatar}.jpg?size=128` width="32px" height="32px").space-right.rounded
                                    =user.username
                                

    block content
